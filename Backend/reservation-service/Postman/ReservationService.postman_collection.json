{
  "info": {
    "name": "_03_Reservation Service API",
    "description": "Complete API collection for the Reservation Service microservice - Updated for array-based reservation creation",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_exporter_id": "reservation-service"
  },
  "item": [
    {
      "name": "Controller Test",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/{{api_version}}/reservations/controller_test",
          "host": ["{{base_url}}"],
          "path": ["api", "{{api_version}}", "reservations", "controller_test"]
        },
        "description": "Test endpoint to verify the reservation controller is working"
      },
      "response": []
    },
    {
      "name": "Create Reservation",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "[\n  {\n    \"userId\": \"{{user_id}}\",\n    \"stallId\": \"{{stall_id}}\",\n    \"businessName\": \"Tech Solutions\",\n    \"email\": \"contact@techsolutions.com\",\n    \"phoneNumber\": \"123-456-7890\"\n  }\n]"
        },
        "url": {
          "raw": "{{base_url}}/api/{{api_version}}/reservations",
          "host": ["{{base_url}}"],
          "path": ["api", "{{api_version}}", "reservations"]
        },
        "description": "Create new reservations (accepts array of reservation objects)"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 201) {",
              "    const response = pm.response.json();",
              "    if (Array.isArray(response) && response.length > 0) {",
              "        pm.environment.set('reservation_id', response[0].reservationId);",
              "        console.log('First reservation created with ID:', response[0].reservationId);",
              "    }",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "response": []
    },
    {
      "name": "Get All Reservations",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/{{api_version}}/reservations",
          "host": ["{{base_url}}"],
          "path": ["api", "{{api_version}}", "reservations"]
        },
        "description": "Retrieve all reservations"
      },
      "response": []
    },
    {
      "name": "Get Reservation by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/{{api_version}}/reservations/{{reservation_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "{{api_version}}", "reservations", "{{reservation_id}}"]
        },
        "description": "Retrieve a specific reservation by ID"
      },
      "response": []
    },
    {
      "name": "Get Reservations by User ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/{{api_version}}/reservations/user/{{user_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "{{api_version}}", "reservations", "user", "{{user_id}}"]
        },
        "description": "Retrieve all reservations for a specific user"
      },
      "response": []
    },
    {
      "name": "Delete Reservation",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/{{api_version}}/reservations/{{reservation_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "{{api_version}}", "reservations", "{{reservation_id}}"]
        },
        "description": "Delete a reservation (only cancelled or pending reservations can be deleted)"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 204) {",
              "    console.log('Reservation deleted successfully');",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "response": []
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Set timestamp for dynamic data",
          "pm.globals.set('timestamp', new Date().toISOString());"
        ]
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8083",
      "type": "string"
    },
    {
      "key": "api_version",
      "value": "v1",
      "type": "string"
    }
  ]
}